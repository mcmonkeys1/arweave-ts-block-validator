{
  "name": "arweave-ts-block-validator",
  "version": "1.0.0",
  "description": "an arweave block validator, nothing more",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --runInBand --no-cache --logHeapUsage --verbose",
    "test:txs": "jest blockTxsValidation --runInBand --no-cache --logHeapUsage --verbose",
    "test:e2e": "jest --config ./test/jest-e2e.json --verbose",
    "test:windows": "node --max-old-space-size=1024 ./node_modules/jest/bin/jest.js --runInBand --no-cache --logHeapUsage --verbose",
    "test:mem": "node --max-old-space-size=1024 node_modules/.bin/jest --logHeapUsage --verbose",
    "test:watch": "jest --watch --logHeapUsage --verbose --runInBand --detectOpenHandles",
    "test:clear": "jest --clearCache --verbose",
    "start:scratch": "node --max-old-space-size=1024 -r ts-node/register ./test/scratchpad-tests.ts",
    "start:pow": "node --max-old-space-size=1024 -r ts-node/register ./test/pow-tests.ts",
    "build": "tsc -p tsconfig.build.json"
  },
  "author": "Ros McMahon <rosmcmahon@gmail.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "axios": "^0.19.2",
    "jest": "^26.4.0",
    "jest-circus": "^26.4.2",
    "prettier": "^2.0.5",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "ar-node-randomx": "github:mcmonkeys1/node-randomx",
    "arweave": "^1.9.1",
    "decimal.js": "^10.2.0"
  }
}

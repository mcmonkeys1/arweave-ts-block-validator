{
  "name": "arweave-ts-block-validator",
  "version": "1.0.0",
  "description": "an arweave block validator, nothing more",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --logHeapUsage --verbose",
    "test:win": "node --max-old-space-size=4096 ./node_modules/jest/bin/jest.js --logHeapUsage --verbose",
    "test:mem": "node --max-old-space-size=4096 node_modules/.bin/jest --logHeapUsage --verbose",
    "test:watch": "jest --watch --logHeapUsage --verbose",
    "test:clear": "jest --clearCache --verbose",
    "test:e2e": "jest --config ./test/jest-e2e.json --verbose",
    "start": "node --max_old_space_size=8192 -r ts-node/register ./src/placeholder-entry-point.ts"
  },
  "author": "Ros McMahon <rosmcmahon@gmail.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "axios": "^0.19.2",
    "jest": "^26.4.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "arweave": "^1.9.1",
    "decimal.js": "^10.2.0"
  }
}
